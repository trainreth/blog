<%- include("partials/header") -%>

  <h1>Compose</h1>

  <form action="/compose" method="post">
    <div class="form-group">
      <label for="newTitle">Title</label>
      <input type="text" class="form-control" name="newTitle">
    </div>
    <div class="form-group">
      <label for="newPost">Post</label>
      <textarea class="form-control" rows=5 name="newContent"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
  </form>

